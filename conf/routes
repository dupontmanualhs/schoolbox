#*      /books/confirmCopyLost/:copyId          controllers.Books.confirmCopyLost(copyId: Long)
GET     /books/checkIn                          controllers.Books.checkIn
POST    /books/checkIn                          controllers.Books.checkInSubmit
#*      /books/checkInLostCopy/:copyId          controllers.Books.checkInLostCopy(copyId: Long)
